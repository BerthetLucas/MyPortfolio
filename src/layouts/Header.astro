---
import { TypographyH1 } from '@/components/Typographie/TypographieH1';
import { TypographyP } from '@/components/Typographie/TypographieP';
import { Button } from '@/components/ui/button';
import { MotionHeader } from '@/components/MotionComponents/MotionHeader';
import { BackgroundVideo } from '@/components/BackgroundVideo';
---
<MotionHeader
      client:load
      delay={0.2}
      className="flex flex-col items-center justify-center h-screen mb-10 md:gap-20 gap-16 "
    >
      <div class="flex flex-col items-center justify-center gap-5">
        <TypographyH1 className="text-5xl md:text-8xl z-10">
          Lucas Berthet
        </TypographyH1>
        <TypographyP className="text-2xl md:text-4xl z-10">
          Développeur Web
        </TypographyP>
      </div>

      <div class="flex flex-col items-center justify-center gap-5 w-full md:flex-row md:gap-0 z-10">
        <a href="#tabs-toggle" class="flex justify-center">
          <Button client:load variant="default" size="lg">
            Découvrez mes projets !
          </Button>
        </a>
      </div>
      <BackgroundVideo client:load />
    </MotionHeader>
