---
import TypographyH1 from '@/components/Typographie/TypographieH1.astro';
import TypographyP from '@/components/Typographie/TypographieP.astro';
import { Button } from '@/components/ui/button';
import { BackgroundVideo } from '@/components/BackgroundVideo';
import TextType from '@/components/TextType';
---

<section 
  transition:animate="fade" 
  class="relative flex flex-col items-center justify-center h-screen w-full overflow-hidden"
>
  <BackgroundVideo client:load />
  <div class="relative z-10 flex flex-col items-center justify-center gap-16 md:gap-20">
    <div class="flex flex-col items-center justify-center gap-5 text-center">
      <TypographyH1 class="text-5xl md:text-8xl">
        Lucas Berthet
      </TypographyH1>
      <TypographyP class="text-2xl md:text-4xl">
      <TextType client:load
        text={"Développeur Web"}
        typingSpeed={75}
        showCursor
        pauseDuration={150000000}
        cursorCharacter="_"
        cursorBlinkDuration={0.5}
      />
      </TypographyP>
    </div>
    <div class="flex flex-col items-center justify-center gap-5 w-full md:flex-row md:gap-0">
      <a href="#tabs-toggle" class="flex justify-center">
        <Button client:load variant="default" size="lg" className="text-lg">
          Découvrez mes projets !
        </Button>
      </a>
    </div>

  </div>
</section>